{
  "name": "ourtextscores-backend",
  "version": "0.1.0",
  "description": "Backend API for OurTextScores",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "build": "nest build",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.config.ts",
    "test:smoke": "jest --config ./test/jest-e2e.config.ts smoke-simple.e2e-spec.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "reindex:search": "node dist/reindex-search.js",
    "backfill:thumbnails": "node dist/generate-thumbnails.js",
    "ops:project-promotion": "node scripts/project-promotion.js",
    "ops:seed-admin-user": "node scripts/seed-admin-user.js",
    "ops:pdmx-import": "node scripts/pdmx-import-csv.js",
    "ops:pdmx-sync-assets": "node scripts/pdmx-sync-assets.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.0",
    "@nestjs/mongoose": "^10.0.5",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^7.4.2",
    "adm-zip": "^0.5.16",
    "isomorphic-git": "^1.24.5",
    "meilisearch": "^0.35.0",
    "minio": "^8.0.6",
    "mongoose": "^8.3.2",
    "nodemailer": "^6.9.16",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.0",
    "@types/adm-zip": "^0.5.7",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
